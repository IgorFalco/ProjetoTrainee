generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  idUser       Int     @id @default(autoincrement())
  name         String
  email        String  @unique
  photo        String?
  password     String
  role         String
  listenMusics Music[]
}

model Artist {
  idArtist Int     @id @default(autoincrement())
  name     String
  streams  Int
  photo    String
  musics   Music[]
}

model Music {
  idMusic      Int     @id @default(autoincrement())
  name         String
  genre        String
  album        String
  artistId     Int
  artist       Artist  @relation(fields: [artistId], references: [idArtist])
  listenerUser User[]
}
